---
// library import
import { Icon } from "astro-icon";
import "../styles/global.css";
// component import
import Link from "./Link.astro";

// data import
import navData from "../data/nevData";
import type { LinkProps } from "../interface/link";
---

<nav aria-label="Primary">
  <div class="navbar">
    <a href="/" class="logomark" aria-label="Go Home">
      <Icon name="logomark" width="36" />
    </a>
    <ul>
      {
        navData.map((item: LinkProps) => (
          <Link
            href={item.path}
            style="primary"
            text={item.name}
            borderVsible={false}
            isFilled={true}
            data-navLink
          />
        ))
      }
    </ul>
  </div>
</nav>

<script>
  import "../js/nav.js";
</script>
